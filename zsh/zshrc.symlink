# -*- shell-script -*-

HISTFILE=~/.zsh_history
SAVEHIST=1024

for file in $DOT/*/*.zsh
do
  source $file
done

[[ $TERM == "dumb" ]] && unsetopt zle && PS1='%m$ ' && return

PS1="%{%F{green}%}%n@%m%{%F{white}%} %1~ %# "
FPATH=$(brew --prefix)/share/zsh-completions:$FPATH

autoload -Uz compinit
compinit
